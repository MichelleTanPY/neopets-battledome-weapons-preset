{
  "manifest_version": 3,
  "name": "Neopets Battledome Weapons Loader",
  "version": "1.0",
  "description": "Helps fellow Neopians preload battledome weapons when fighting opponents in Battledome, 2 presave slots are available!",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "menu.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "options_page": "options.html"
}
